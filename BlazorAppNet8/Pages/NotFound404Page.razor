@using BlazorAppNet8.Components
@using BlazorAppNet8.Classes
@using MudBlazor.Services
@inject NavigationManager NavigationManager

<MudThemeProvider @bind-IsDarkMode="@DarkTheme" Theme="_theme" />
<MudContainer Class="text-center pa-4">
	<MudImage src="@PicturePath" Class="mb-4" Style="max-width: 100%; height: auto;" />
	<MudText Typo="Typo.h3" Class="mb-2">Ой! Страница не найдена. Ошибка 404!</MudText>
	<MudText Typo="Typo.subtitle1" Class="mb-4">Похоже, вы заблудились в космосе. Давайте вернем вас на главную страницу</MudText>
	<MudButton onclick="@(() =>  NavigationManager.NavigateTo("/"))" Variant="Variant.Filled" Color="Color.Primary" Class="pa-3" Style="width: 100%; max-width: 300px;">
		Вернуться на главную
	</MudButton>
</MudContainer>
@code {
	private MudTheme _theme = new();
	public bool DarkTheme;
	private string ThemeName => DarkTheme ? "Dark" : "Light";
	private string PicturePath => $"Pictures/Error{@ThemeName}.png";
}
<style>
	body {
		background-color: var(--mud-palette-background);
		margin: 0;
		padding: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		text-align: center;
	}
</style> 